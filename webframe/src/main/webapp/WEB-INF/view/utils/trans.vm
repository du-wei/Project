<!DOCTYPE html>
<html>
<head>
#parse("/common/var.vm")
<title>$!{title}</title>
#parse("/common/head_jquery.vm")

<script type="text/javascript">
$(function(){
	$("#queryTrans").click(function(){
		var param = {
			from : $("#from").val(),
			to : $("#to").val(),
			q : $("#q").val()
		};
		
    	$.get("/utils/q/trans", param).done(function(val){
    		var div = $("#transDiv");
    		div.show().empty().text(val);
    	});
	});
	
	$("#queryChinese").click(function(){
		var param = {
			data : $("#data").val(),
			type : $("#type").val()
		};
		
    	$.get("/utils/q/chinese", param).done(function(val){
    		var div = $("#chineseDiv");
    		div.show().empty().text(val);
    	});
	});
	
});
</script>
</head>
<body>
	q<input type="text" id="q" value=""/> 
	from
	<select id="from">
		<option value="auto">自动识别</option>
		<option value="zh">中文</option>
		<option value="en">英文</option>
	</select>
	to
	<select id="to">
		<option value="auto">自动识别</option>
		<option value="zh">中文</option>
		<option value="en">英文</option>
	</select>
	<button id="queryTrans">Query</button>
	<div id="transDiv" style="display:none;">
	</div>
	
	data<input type="text" id="data" value=""/> 
	<select id="type">
		<option value="0">中文转拼音</option>
		<option value="1">简体转繁体</option>
		<option value="2">繁体转简体</option>
	</select>
	<button id="queryChinese">Query</button>
	<div id="chineseDiv" style="display:none;">
	</div>
	
</body>
</html>