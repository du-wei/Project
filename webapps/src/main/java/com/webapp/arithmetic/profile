#export REDIS_HOME=/webapp/redis
#export PATH=$MONGODB_HOME/bin:$REDIS_HOME/src:$PATH

export HADOOP_HOME=/webapp/hadoop
export HBASE_HOME=/webapp/hbase
export PATH=$HADOOP_HOME/bin:$HADOOP_HOME/sbin:$HBASE_HOME/bin:$PATH

export HIVE_HOME=/webapp/hive
export PATH=$HIVE_HOME/bin:$PATH
export CALSSPATH=$HIVE_HOME/lib:$CLASSPATH


