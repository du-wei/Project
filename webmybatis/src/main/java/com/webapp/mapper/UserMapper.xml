<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.webapp.model.User">

	<!-- 
	List<Map<string,string>>
	List<User>
	User
		id
		name
		age
		
	StudentDto
		id
		name
		score
	 -->
	<resultMap type="com.webapp.Student" id="stuMap">
		<result column="id" property="id"/>
		<result column="score_stu" property="scoreId"/>
	</resultMap>
	<select id="load" parameterType="int" resultType="stuMap">
		select id, score_stu from user where id=#{id}
	</select>
	

	<insert id="add" parameterType="User">
		insert into user (id,username,password,status)
			value(#{id},#{username},#{password},#{status})
	</insert>
	
	<delete id="delete" parameterType="int">
		delete from ser where id=#{id}
	</delete>
	
	<select id="load" parameterType="int" resultType="User">
		select * from user where id=#{id}
	</select>
	
	<select id="list" resultType="User">
		select * from user
	</select>
</mapper>