<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.locale" value="zh_CN" />
	<constant name="struts.ui.theme" value="simple" />
	<constant name="struts.i18n.reload" value="true" />
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<constant name="struts.objectFactory" value="spring" />
	<constant name="struts.configuration.xml.reload" value="true" />
	<constant name="struts.convention.classes.reload" value="true" />
	<constant name="struts.serve.static.browserCache" value="false" />

	<package name="admin" namespace="/" extends="json-default">
		<interceptors>
			<interceptor class="com.webapp.interceptor.LogInterceptor" name="log" />
		</interceptors>
		<default-interceptor-ref name="log" />
	
		<action name="myIndex" class="com.webapp.action.IndexAction">
			<result>/index.jsp</result>
		</action>
		
		<action name="testAction" class="com.webapp.action.IndexAction">
			<result>/test.jsp</result>
		</action>
		
		<action name="JsonAction" class="com.webapp.action.ResultAction">
			<!-- 跳转到另一个action	服务器端跳转 -->
			<result name="chain" type="chain">
				<param name="actionName">JsonAction</param>
				<param name="namespace">/</param>
				<param name="method">result1</param>
				<param name="param">1</param>
			</result>
			<!-- 重定向到另一个action	客户端跳转 -->
			<result name="redirectAction" type="redirectAction">
				<param name="actionName">JsonAction!result1</param>
				<param name="namespace">/</param>
				<param name="message.id">1</param>
			</result>
			<!-- 重定向到一个链接	客户端跳转 -->
			<result name="redircet" type="redirect">sonAction!result?type=redircet1</result>
			<result name="redircet1" type="redirect">
				<param name="location">index.jsp</param>
         		<param name="namespace">/</param>
			</result>
			<result name="json" type="json">
                <param name="root">jsonObject</param>
                <param name="excludeNullProperties">true</param>
                <param name="includeProperties">id,name</param>
                <param name="excludeProperties"></param>
			</result>
		</action>
		
		<action name="free" class="com.webapp.action.FreemarkerAction">
			<result>/index.jsp</result>
		</action>
		
		
	</package>

</struts>
